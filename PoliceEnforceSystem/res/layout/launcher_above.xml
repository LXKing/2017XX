<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/func_bg"
    android:orientation="vertical">

    <com.xiangxun.widget.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:background="@drawable/image_home" />

            <LinearLayout
                android:id="@+id/driver_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/driverSearch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_padding1"
                    android:layout_weight="1"
                    android:background="@drawable/icon_driver"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/carSearch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_padding1"
                    android:layout_weight="1"
                    android:background="@drawable/icon_car"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wfxwtz_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_wfxwtz"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="违法行为通知"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/jycxcf_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_jycxcf"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="简易程序处罚"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/xzqzcs_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_xzqzcs"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="行政强制措施"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wfcj_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_wtzp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="违停抓拍"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/sgdj_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_sgdj"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="事故登记"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/rcqw_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linearbgselector"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_rcqw"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_padding20"
                    android:paddingTop="@dimen/margin_padding20"
                    android:text="日常勤务"
                    android:textColor="#00008B"
                    android:textSize="@dimen/textSize12"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>