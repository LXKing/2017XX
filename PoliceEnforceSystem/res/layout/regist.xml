    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/more_item_selector"
        android:focusable="true"
    	android:focusableInTouchMode="true"
        android:padding="@dimen/margin_padding10" >

        <TextView
            android:id="@+id/text_regidcard"
            style="@style/more_text"
            android:text="@string/plateregist" />
        <EditText
            android:id="@+id/regedtidcard"
            style="@style/edittext"
            android:hint="填入车牌识别注册码" />
    </LinearLayout>

    <Button
        android:id="@+id/regbtnidcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_blue_selctor"
        android:text="@string/authbutton"
        android:textColor="@drawable/textcolor_selector" />

    <Button
        android:id="@+id/recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_blue_selctor"
        android:text="恢复"
        android:textColor="@drawable/textcolor_selector"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <ProgressBar
            android:id="@+id/down_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>