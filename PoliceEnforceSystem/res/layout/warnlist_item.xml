<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warn_item"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:orientation="vertical"
    android:background="@drawable/list_bg_blue_selector" >

    <ImageView
        android:id="@+id/item_img1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:padding="15dip" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_img1"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/margin_padding8"
        android:text="123"
        android:singleLine="true"
        android:textColor="@drawable/textcolor_selector"
        android:textSize="15sp"
        android:textStyle="bold"
         />
    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_marginTop="5dip"
        android:paddingLeft="@dimen/margin_padding8"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:text="123"
        android:textColor="@drawable/textcolor_selector"
         />
    <TextView
        android:id="@+id/item_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_marginTop="5dip"
        android:paddingRight="@dimen/margin_padding8"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="签收并反馈"
        android:textColor="@color/blue"
        android:visibility="gone"
        />
</RelativeLayout>