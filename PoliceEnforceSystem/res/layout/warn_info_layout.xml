<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warn_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/margin_padding10"
        android:layout_marginLeft="@dimen/margin_padding10"
        android:layout_marginRight="@dimen/margin_padding10"
        android:background="@drawable/publish_item_background"
        android:orientation="vertical"
        android:visibility="visible"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_padding15"
            android:layout_marginTop="@dimen/margin_padding10"
            android:layout_marginBottom="@dimen/margin_padding10"
            android:gravity="center_vertical"
            android:text="预警详情:"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#d1d1d1" />

        <TextView
            android:id="@+id/warn_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding15"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="预案编码: fasdf\n预案名称: 沈阳一号\n预案内容:"
            android:lineSpacingExtra="@dimen/margin_padding5"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize15"
            android:visibility="visible"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_padding10"
        android:layout_marginRight="@dimen/margin_padding10"
        android:background="@drawable/publish_item_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_padding15"
            android:layout_marginTop="@dimen/margin_padding10"
            android:layout_marginBottom="@dimen/margin_padding10"
            android:gravity="center_vertical"
            android:text="查询:"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_device_pic"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/tv_device_info"
            android:layout_marginRight="@dimen/margin_padding15"
            android:layout_marginTop="@dimen/margin_padding10"
            android:layout_marginBottom="@dimen/margin_padding10"
            android:gravity="center_vertical"
            android:text="预警图片"
            android:textColor="@color/blue"
            android:textSize="@dimen/textSize15" />
        <TextView
            android:id="@+id/tv_device_info"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_padding15"
            android:layout_marginTop="@dimen/margin_padding10"
            android:layout_marginBottom="@dimen/margin_padding10"
            android:gravity="center_vertical"
            android:text="机动车信息"
            android:textColor="@color/blue"
            android:textSize="@dimen/textSize15" />
    </RelativeLayout>

    <include layout="@layout/warndevice_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_marginLeft="@dimen/margin_padding10"
        android:layout_marginRight="@dimen/margin_padding10"
        android:background="#d1d1d1" />
</LinearLayout>