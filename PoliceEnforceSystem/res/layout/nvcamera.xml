<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/nvsurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/nvtvres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="TextView" />

        <Button
            android:id="@+id/nvcambtnsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_line_white"
            android:padding="@dimen/margin_padding10"
            android:text="@string/nvcanbtnmore"
            android:textColor="@drawable/textcolor_selector" />

        <Button
            android:id="@+id/nvbtnretry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nvcambtnsearch"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_line_white"
            android:padding="@dimen/margin_padding10"
            android:text="@string/retry"
            android:textColor="@drawable/textcolor_selector" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nvcambtnsearch"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_line_white"
            android:padding="@dimen/margin_padding10"
            android:text="@string/ok"
            android:textColor="@drawable/textcolor_selector"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>