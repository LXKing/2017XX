<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical" >

    <com.xiangxun.widget.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.xiangxun.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/common_photo_layout" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_padding10"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding1"
                        android:layout_marginRight="@dimen/margin_padding6"
                        android:text="|"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dashed_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_padding5"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报警人员:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_alarm_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系方式:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_call_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="事故地点:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_publish_click_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/roadlocation_flag"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_road_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/ll_publish_click_road_direct"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/roaddirect_flag"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_road_direct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="事故时间:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天气状况:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_weather_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_padding10"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding1"
                        android:layout_marginRight="@dimen/margin_padding6"
                        android:text="|"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carinfo"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dashed_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_padding5"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车辆数目:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accspicar_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acclinearLayoutcarinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_padding10"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding1"
                        android:layout_marginRight="@dimen/margin_padding6"
                        android:text="|"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="事故信息"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dashed_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_padding5"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="事故类型:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与人员:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_join_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="受伤人数:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_thurt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="死亡人数:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_died"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="事故简介:"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize16" />

                        <TextView
                            android:id="@+id/tv_accident_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xiangxun.widget.MyScrollView>

</LinearLayout>