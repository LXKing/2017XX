<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frabg"
    android:orientation="vertical" >

    <com.xiangxun.widget.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/full_line_seperator"
        android:layout_marginTop="@dimen/margin_padding10" />

    <RelativeLayout
        android:id="@+id/rl_warn_setting"
        style="@style/more_relativelayout" >

        <TextView style="@style/more_arrows" />

        <ImageView
            android:id="@+id/dvimage01"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_warnset"
            android:paddingBottom="13dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="13dip" />

        <TextView
            style="@style/more_text"
            android:layout_toRightOf="@id/dvimage01"
            android:text="@string/warnset" />
    </RelativeLayout>

    <View
        style="@style/full_line_seperator"
        android:layout_marginLeft="@dimen/margin_padding15" />

      <RelativeLayout
        android:id="@+id/rl_publish_warn"
        style="@style/more_relativelayout" >

        <TextView style="@style/more_arrows" />

        <ImageView
            android:id="@+id/dvimage03"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_warn"
            android:paddingBottom="13dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="13dip" />

        <TextView
            style="@style/more_text"
            android:layout_toRightOf="@id/dvimage03"
            android:text="@string/warn_do" />
    </RelativeLayout>

    <View style="@style/full_line_seperator" />

</LinearLayout>