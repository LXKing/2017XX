<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical" >

    <com.xiangxun.widget.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/publish_item_all_background"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_publish_click_platenum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/publish_click_selector"
            android:orientation="vertical" >

            <com.xiangxun.widget.AutoClearEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="输入车辆号牌号码"
                android:inputType="text"
                android:text="@string/def_platenum"
                android:maxLength="7"
                android:padding="8dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/color333333"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/textSize15" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#d1d1d1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_publish_click_platetype"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/publish_click_selector"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:id="@+id/tv_publish_platetype"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="选择号牌种类"
                        android:paddingLeft="8dp"
                        android:textColor="@color/color333333"
                        android:textColorHint="#cccccc"
                        android:textSize="@dimen/textSize15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/icon_pull" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_driver_plate_num"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_line"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding15"
            android:paddingRight="@dimen/margin_padding15" >

            <ToggleButton
                android:id="@+id/tgbtn_search_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:focusable="false"
                android:textColor="@color/blue"
                android:textOff="@string/jcbtngetplate"
                android:textOn="@string/jcsearchplate"
                android:textSize="@dimen/textSize15" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_vio_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_vio_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="right"
            android:text="违法查询"
            android:padding="4dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/textSize18" />
    </RelativeLayout>

    <include
        layout="@layout/loading"
        android:visibility="gone" />

    <include
        layout="@layout/no_data"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_vehicle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eaeaea"
        android:orientation="vertical"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_padding10"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding1"
                        android:layout_marginRight="@dimen/margin_padding6"
                        android:text="|"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_info"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize18" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dashed_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_padding10"
                    android:paddingLeft="@dimen/margin_padding10"
                    android:paddingRight="@dimen/margin_padding10"
                    android:paddingTop="@dimen/margin_padding10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_type"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ask_buy_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_color"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_name"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_tel"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_brand"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_status"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_use"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_use"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_code"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_recognition"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_recognition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_first"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_end_date"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/textSize14" />

                        <TextView
                            android:id="@+id/tv_vehicle_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_padding8"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/textSize14" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>