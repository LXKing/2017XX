<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical" >

    <com.xiangxun.widget.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.xiangxun.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_comm_title"
        android:layout_marginBottom="50dip" >

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comm_title"
            android:orientation="vertical" >

            <include layout="@layout/common_photo_layout" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding10" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勤务类型:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="执勤地点:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_publish_click_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/roadlocation_flag"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_road_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_publish_click_road_direct"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/roaddirect_flag"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_road_direct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="执勤时间:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勤务描述:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_affairs_discribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xiangxun.widget.MyScrollView>

</RelativeLayout>