<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layoutSize50"
    android:background="@drawable/more_item_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_padding5"
        android:src="@drawable/set_printer" />

    <TextView
        android:id="@+id/item_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layoutSize20"
        android:layout_gravity="center"
        android:text="name"
        android:textSize="@dimen/textSize18" />

</LinearLayout>